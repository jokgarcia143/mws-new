@model IEnumerable<MWS.Web.Models.CustomersSummary>

@{
    ViewData["Title"] = "Print Summary PDF";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/dist/css/print-summary-pdf.css">
    @* <script src="~/dist/js/consumers-transaction-summary-pdf.js"></script> *@
    <script src="~/dist/js/table-with-parameter.js?@ViewData["Title"]"></script>
    <script src="~/dist/js/html2pdf.bundle.js"></script>
</head>

<a onclick="myAlert()" id="pdfGenerate">Please wait while PDF is still downloading...</a>

<section class="pdfGenerate">
    <table id="table" class="bordered-table">
        <caption>
                <div>
                    <img src="~/dist/img/mws_seal.png" style="padding-left:189px;padding-top:2px;WIDTH: 80px;HEIGHT: 80px;float:left;margin-top: 0;" class="mws-seal">
                    <p style="padding-left: 5pt;text-indent: 0pt;line-height: 3pt;text-align: left;"><span /></p>
                    <p style="text-indent: 0pt;text-align: left;"><span /></p>
                    <h1 style="padding-top: 4pt;padding-left: 220pt;text-indent: 0pt;text-align: left;">MAGALLANES WATER SYSTEM</h1>
                    <p style="padding-top: 2pt;padding-left: 255pt;text-indent: 23pt;line-height: 157%;text-align: left;">Province of Cavite</p>
                    <p style="padding-top: 2pt;padding-left: 232pt;text-indent: 23pt;line-height: 157%;text-align: left;">Municipality of Magallanes,Cavite</p>
                    <p style="text-indent: 0pt;text-align: left;"><br /></p>
                    <h2 style="padding-top: 4pt;padding-left: 186pt;/* text-indent: 0pt; */text-align: left;">CUSTOMERS SUMMARY OF TRANSACTIONS</h2>
                    <p>
                        <span style="float: left;padding-top: 7pt;padding-left: 63pt;text-indent: 0pt;text-align: left;color: black;font-weight: bold;text-decoration: none; font-size: 8pt;">Customer:</span> 
                        <span style=" color: #808080;font-family: Arial, sans-serif;font-style: normal;font-weight: bold;text-decoration: none;font-size: 8pt;padding-top: 7pt;    padding-left: 10pt;text-indent: 20pt;text-align: left; float:left">@Model.First().Name</span>
                        <span style="float: left;padding-top: 7pt;padding-left: 63pt;text-indent: 0pt;text-align: left;color: black;font-weight: bold;text-decoration: none; font-size: 8pt;">Address:</span>
                        <span style="color: #808080;font-family: Arial, sans-serif;font-style: normal;font-weight: bold;text-decoration: none;font-size: 8pt;padding-top: 7pt;    padding-left: 10pt;text-indent: 20pt;text-align: left; float:left">@Model.First().Address</span>
                    </p>
                    <p style="text-indent: 0pt;text-align: left;"><br /></p><p class="s1" style="padding-left: 128pt;text-indent: 0pt;padding-top:10pt;line-height: 1pt;text-align: left;"><span />	<span /></p>
                    <h3 style="padding-bottom: 2pt;padding-left: 63pt;text-indent: 0pt;text-align: left;">Account No:   <span class="s2" style="padding-left: 20pt">@Model.First().AcctNo</span><span style="float:left;">Meter No: </span><span class="s2" style="padding-left:23pt;">@Model.First().MeterNo</span></h3>
                    <p class="s1" style="padding-left: 128pt;text-indent: 0pt;line-height: 1pt;text-align: left;"><span />	<span /></p>
                    <p style="text-indent: 0pt;text-align: left;"><br /></p><p style="text-indent: 0pt;text-align: left;"><br />
                </div>
        </caption>
        <thead>
            <tr style="height:6pt">
                <td style="width:45pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="text-indent: 0pt;line-height: 5pt;text-align: left;">Type</p>
                </td>
                <td style="width:75pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 27pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Month</p>
                </td>
                <td style="width:77pt;border-top-style:solid;border-top-width:1pt" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 24pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Wbill #</p>
                </td>
                <td style="width:64pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 26pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Reading</p>
                </td>
                <td style="width:96pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 5pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Consumed Amount</p>
                </td>
                <td style="width:58pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 10pt;text-indent: 0pt;line-height: 5pt;text-align: left;">AmntPaid</p>
                </td>
                <td style="width:49pt;border-top-style:solid;border-top-width:1pt" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 10pt;text-indent: 0pt;line-height: 5pt;text-align: left;">OR #</p>
                </td>
                <td style="width:52pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 20pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Date</p>
                </td>
                <td style="width:45pt;border-top-style:solid;border-top-width:1pt" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 14pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Balance</p>
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <p class="s4">@item.Type</p>
                    </td>
                    <td>
                        <p class="s4">@item.Month</p>
                    </td>
                    <td>
                        <p class="s4">@item.WaterBillNo</p>
                    </td>
                    <td>
                        <p class="s4">@item.Reading</p>
                    </td>
                    <td>
                        <p class="s4">@item.Consumed</p>
                    </td>
                    <td>
                        <p class="s4">@item.AmountBilled</p>
                    </td>

                    <td>
                        <p class="s4">@item.AmountPaid</p>
                    </td>
                    <td>
                        <p class="s4">@item.OfficialReceipt</p>
                    </td>
                    <td>
                        <p class="s4">@item.PresDate</p>
                    </td>
                    <td>
                        <p class="s4">@item.Balance</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

