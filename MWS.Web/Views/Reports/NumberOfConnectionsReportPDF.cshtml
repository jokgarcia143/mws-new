@model IEnumerable<MWS.Web.Models.NumberOfConnection>

@{
    ViewData["Title"] = "Total No of Connections";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/dist/css/disconnection-receiving-PDF.css" type="text/css">
    <script src="~/dist/js/checklistreport-pdf.js?@ViewData["Title"]"></script>
    <script src="~/dist/js/html2pdf.bundle.js"></script>
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script> *@
</head>

<a onclick="myAlert()" id="pdfGenerate">Please wait while PDF is still downloading...</a>

<section class="tables-section">
    <table id="invoice" class="pdf-receiving-table">
        <caption>
            <div class="container">
                <div class="left-col">
                    <img width="100" height="100" src="~/dist/img/mws_seal.png" class="mws-seal">
                </div>
                <div class="right-col">
                    <h3 class="main-header">MAGALLANES WATER SYSTEM</h3>
                    <p class="sub-header">Province of Cavite</p>
                    <p class="address-cta">Municipality of Magallanes, Cavite</p>
                    <h3 class="notice-cta">Total No. of Connections</h3>
                   @* <p class="barangay-cta">@Model.Barangay</p>*@
                </div>
            </div>
        </caption>
        <thead>
            <tr class="titles-cta">
                <th>
                    <p>BARANGAY</p>
                </th>
                <th>
                    <p>RESIDENTIAL</p>
                </th>
                <th>
                    <p>COMMERCIAL</p>
                </th>
                <th>
                    <p>GOVERNMENT</p>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var connection in Model)
            {
                <tr>
                    <td>
                        <p>@connection.Barangay</p>
                    </td>
                    <td>
                        <p>@connection.Residential</p>
                    </td>
                    <td>
                        <p>@connection.Commercial</p>
                    </td>
                    <td>
                        <p>@connection.Government</p>
                    </td>
                </tr>
            }
            @*<tr>
                <td>
                    <p>TOTAL</p>
                </td>
                <td>
                    <p>@Model</p>
                </td>
            </tr>*@
        </tbody>
    </table>
</section>

