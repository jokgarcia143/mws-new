@model IEnumerable<MWS.Web.Models.CustomersSummary>

@{
    ViewData["Title"] = "MONTHLY TOTAL CUBIC CONSUMED PER BARANGGAY";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/dist/css/print-summary-pdf.css">
    <script src="~/dist/js/cubic-consumed-brgy-pdf.js"></script>
    <script src="~/dist/js/html2pdf.bundle.js"></script>
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script> *@
</head>

<a onclick="myAlert()" id="pdfGenerate">Please wait while cubic-consumed-brgy PDF is still downloading...</a>

<section class="">
    <table id="cubic-consumed-brgy" class="pdf-receiving-table">
        <caption>
            @* <div>*@
            @* <div class="left-col">
            <img width="100" height="100" src="~/dist/img/mws_seal.png" class="mws-seal">
            </div>*@
            <div>
                <img src="~/dist/img/mws_seal.png" style="padding-left:189px;padding-top:2px;WIDTH: 80px;HEIGHT: 80px;float:left;margin-top: 0;" class="mws-seal">
                <p style="padding-left: 5pt;text-indent: 0pt;line-height: 3pt;text-align: left;"><span /></p>
                <p style="text-indent: 0pt;text-align: left;"><span /></p>
                <h1 style="padding-top: 4pt;padding-left: 220pt;text-indent: 0pt;text-align: left;">MAGALLANES WATER SYSTEM</h1>
                <p style="padding-top: 2pt;padding-left: 255pt;text-indent: 23pt;line-height: 157%;text-align: left;">Province of Cavite</p>
                <p style="padding-top: 2pt;padding-left: 232pt;text-indent: 23pt;line-height: 157%;text-align: left;">Municipality of Magallanes,Cavite</p>
                <p style="text-indent: 0pt;text-align: left;"><br /></p>
                <h2 style="padding-top: 4pt;padding-left: 186pt;/* text-indent: 0pt; */text-align: left;">@ViewData["Title"]</h2>
                <p>
                    <span style="float: left;padding-top: 7pt;padding-left: 63pt;text-indent: 0pt;text-align: left;color: black;font-weight: bold;text-decoration: none; font-size: 8pt;">Baranggay:</span>
                    <span style=" color: #808080;font-family: Arial, sans-serif;font-style: normal;font-weight: bold;text-decoration: none;font-size: 8pt;padding-top: 7pt;    padding-left: 10pt;text-indent: 20pt;text-align: left; float:left">@Model.First().Barangay</span>
                </p>
                <br />
            </div>
        </caption>
        <thead>
            <tr style="height:6pt">
                <td style="width:45pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="text-indent: 0pt;line-height: 5pt;text-align: left;">Name</p>
                </td>
                <td style="width:75pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 27pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Account Type</p>
                </td>
                <td style="width:77pt;border-top-style:solid;border-top-width:1pt" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 24pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Account No</p>
                </td>
                <td style="width:64pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 26pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Meter No</p>
                </td>
                <td style="width:96pt;border-top-style:solid;border-top-width:5pt;border-top-color:#808080" bgcolor="#3F3F3F">
                    <p class="s3" style="padding-left: 5pt;text-indent: 0pt;line-height: 5pt;text-align: left;">Consumed</p>
                </td>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <p class="s4">@item.Name</p>
                    </td>
                    <td>
                        <p class="s4">@item.Type</p>
                    </td>
                    <td>
                        <p class="s4">@item.AcctNo</p>
                    </td>
                    <td>
                        <p class="s4">@item.MeterNo</p>
                    </td>
                    <td>
                        <p class="s4">@item.Consumed</p>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</section>

