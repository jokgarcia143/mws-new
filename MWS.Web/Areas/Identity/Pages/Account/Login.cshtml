@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="login-box">
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg"><b>Magallanes Water System</b></p>
            <form id="account" method="post">
                <div class="input-group mb-3">
                    <input asp-for="Input.UserName" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.UserName" class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.Password" class="fas fa-lock"></span>

                        </div>
                    </div>
                    
                </div>
                <span style="color:red; font-weight:bolder">@TempData["IsSuccess"]</span>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" asp-for="Input.RememberMe" id="remember">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <!-- /.social-auth-links -->

            <p class="mb-1">
                <a href="forgot-password.html">I forgot my password</a>
            </p>
            <p class="mb-0">
                <a href="/Identity/Account/Register" class="text-center">Register a new membership</a>
                @*<a href="register.cshtml" class="text-center">Register a new membership</a>*@
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
